# Discord Bot Configuration
# Get your bot token from: https://discord.com/developers/applications
DISCORD_TOKEN=your_discord_bot_token_here
DISCORD_GUILD_ID=
DISCORD_COMMAND_PREFIX=!mealie

# Mealie Configuration
# Your Mealie instance URL (without trailing slash)
MEALIE_BASE_URL=https://your-mealie-instance.com
# Get API token from: Mealie Settings > API Tokens
MEALIE_API_TOKEN=your_mealie_api_token_here
MEALIE_USERNAME=
MEALIE_PASSWORD=

# Bot Settings
BOT_LOG_LEVEL=INFO
BOT_TIMEOUT=30

# Recipe Settings
DEFAULT_RECIPE_TAGS=Discord Import,Verify
REQUIRE_INSTRUCTIONS=true
REQUIRE_INGREDIENTS=true

# AI Configuration (Optional)
# Get API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here
AI_ENABLED=false
AI_MODEL=gpt-3.5-turbo
